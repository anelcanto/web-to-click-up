{
    "manifest_version": 3,
    "name": "Web-to-Click Up BETA",
    "version": "1.0",
    "description": "THIS EXTENSION IS FOR BETA TESTING. Create a ClickUp task from a Dice candidate",
    "permissions": [
        "activeTab",
        "storage",
        "sidePanel"
    ],
    "host_permissions": [
        "https://api.clickup.com/*",
        "https://www.dice.com/*"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "side_panel": {
        "default_path": "sidepanel.html"
    },
    "content_scripts": [
        {
            "matches": [
                "https://www.dice.com/*"
            ],
            "js": [
                "content.js"
            ]
        }
    ],
    "commands": {
        "_execute_action": {
            "suggested_key": {
                "default": "Ctrl+Shift+E",
                "mac": "Command+Shift+E"
            },
            "description": "Open extension popup"
        }
    },
    "icons": {
        "16": "icon.png",
        "48": "icon.png",
        "128": "icon.png"
    }
}